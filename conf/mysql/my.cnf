[client]
socket = /run/user/1000/mysql.sock

[mysqld]
# 基本配置
user = afu
datadir = /home/afu/.local/share/mysql
socket = /run/user/1000/mysql.sock
pid-file = /run/user/1000/mysql.pid
port = 3306
bind-address = 127.0.0.1

# InnoDB性能优化 (针对64GB系统)
innodb_buffer_pool_size = 16GB          # 25%内存用于MySQL
innodb_log_file_size = 2GB
innodb_flush_log_at_trx_commit = 2      # 开发环境优化
innodb_file_per_table = 1
innodb_io_capacity = 2000               # SSD优化

# 连接和线程配置
max_connections = 500
thread_cache_size = 50
table_open_cache = 4096
tmp_table_size = 512MB
max_heap_table_size = 512MB

# 查询缓存
query_cache_type = 1
query_cache_size = 512MB

# 日志配置
log_error = /home/afu/.cache/mysql/error.log
slow_query_log = 1
slow_query_log_file = /home/afu/.cache/mysql/slow.log
long_query_time = 2

[mysql]
socket = /run/user/1000/mysql.sock